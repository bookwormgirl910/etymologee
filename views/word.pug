doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title A Global Language
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://fonts.googleapis.com/css?family=Alegreya+SC:500|Alegreya:400,400i,700&display=swap" rel="stylesheet")
    script(src="/javascripts/three/ThreeWebGL.js")
    script(src="/javascripts/three/ThreeExtras.js")
    script(src="/javascripts/three/RequestAnimationFrame.js")
    script(src="/javascripts/three/Detector.js")
    script(src="/javascripts/tween.js")
    script(src="/javascripts/globe.js")
    script.
      var my_entries = !{JSON.stringify(entries)};
      console.log("entries", my_entries);
    script(src="/javascripts/scripts.js")

body
  
  header(id="header")
    nav
      a(href="/" id="home")
        b A Global Language
      a(href="/about") About

  form(method="POST" action="/" class="search")
    input(type="text" name="word_input" id="word-input")
    input(type="submit" value="Look up" id="submit")

  div(class="entries")
    each entry in entries
      div(class="entry")
        h2= entry.word
        p(class="pos")= entry.pos
        div(class="defs")
          each d in entry.def
            p(class="def")!= d
        p(class="etym")!= entry.etym
        p(class="date")= entry.date
  
  div(id="container")
  
  div(id="timeline")
    span(class="timeline-label") 1100
    span(class="timeline-label") 2000

  div(id="stages")
    div(id="languages")
    div(id="words")